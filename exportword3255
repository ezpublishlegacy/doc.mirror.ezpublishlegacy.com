 =3D new ValidationError( &quot;Invalid twitter status url %url%&quot;, nul=
l, array( $fieldValue-&gt;url ) );

&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;$validatorConfiguration =3D $fiel=
dDefinition-&gt;getValidatorConfiguration();
